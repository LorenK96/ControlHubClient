<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<item>
    <shape android:shape="rectangle">

        <corners
            android:radius="5dp" />

        <stroke
            android:color="@color/grey"
            android:width="3dp" />

        <size
            android:width="40dp"
            android:height="40dp" />
    </shape>
</item>
<item>
    <rotate
        android:fromDegrees="45"
        android:toDegrees="45"
        android:pivotX="-40%"
        android:pivotY="87%">
        <shape
            android:shape="rectangle" >
            <solid
                android:color="@color/grey" />

            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </rotate>
</item>
</layer-list>