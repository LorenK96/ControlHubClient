<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18sp"
        android:layout_marginBottom="18sp"
        android:layout_marginLeft="18sp"
        android:layout_marginRight="18sp">

        <EditText
            android:id="@+id/left_bumper_map"
            android:fontFamily="@font/segoeui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/left_bumper_map_lbl"
            android:hint="Left Bumper" />

        <TextView
            android:id="@+id/left_bumper_map_lbl"
            android:textSize="18sp"
            android:fontFamily="@font/segoeui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Left Bumper (LB):" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18sp"
        android:layout_marginLeft="18sp"
        android:layout_marginRight="18sp">

        <EditText
            android:id="@+id/left_trigger_map"
            android:fontFamily="@font/segoeui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/left_trigger_map_lbl"
            android:hint="Left Trigger" />

        <TextView
            android:id="@+id/left_trigger_map_lbl"
            android:textSize="18sp"
            android:fontFamily="@font/segoeui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Left Trigger (LT):" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_map_error"
        android:textSize="14sp"
        android:fontFamily="@font/segoeui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18sp"
        android:layout_marginBottom="18sp"
        android:layout_marginLeft="18sp"
        android:layout_marginRight="18sp"
        android:textColor="@color/colorAccent"
        android:text="" />
</LinearLayout>